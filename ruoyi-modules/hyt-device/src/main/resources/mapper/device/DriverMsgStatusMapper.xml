<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyt.device.mapper.DriverMsgStatusMapper">
    
    <resultMap type="DriverMsgStatus" id="DriverMsgStatusResult">
        <result property="id"    column="id"    />
        <result property="contentId"    column="contentId"    />
        <result property="driverId"    column="driverId"    />
        <result property="readTime"    column="readTime"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectDriverMsgStatusVo">
        select id, contentId, driverId, readTime, status from driver_msg_status
    </sql>

    <select id="selectDriverMsgStatusList" parameterType="DriverMsgStatus" resultMap="DriverMsgStatusResult">
        <include refid="selectDriverMsgStatusVo"/>
        <where>  
            <if test="contentId != null  and contentId != ''"> and contentId = #{contentId}</if>
            <if test="driverId != null  and driverId != ''"> and driverId = #{driverId}</if>
            <if test="readTime != null "> and readTime = #{readTime}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectDriverMsgStatusById" parameterType="Long" resultMap="DriverMsgStatusResult">
        <include refid="selectDriverMsgStatusVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDriverMsgStatus" parameterType="DriverMsgStatus" useGeneratedKeys="true" keyProperty="id">
        insert into driver_msg_status
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contentId != null">contentId,</if>
            <if test="driverId != null">driverId,</if>
            <if test="readTime != null">readTime,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="contentId != null">#{contentId},</if>
            <if test="driverId != null">#{driverId},</if>
            <if test="readTime != null">#{readTime},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateDriverMsgStatus" parameterType="DriverMsgStatus">
        update driver_msg_status
        <trim prefix="SET" suffixOverrides=",">
            <if test="contentId != null">contentId = #{contentId},</if>
            <if test="driverId != null">driverId = #{driverId},</if>
            <if test="readTime != null">readTime = #{readTime},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDriverMsgStatusById" parameterType="Long">
        delete from driver_msg_status where id = #{id}
    </delete>

    <delete id="deleteDriverMsgStatusByIds" parameterType="String">
        delete from driver_msg_status where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>